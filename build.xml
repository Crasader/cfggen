
<!--suppress XmlUnboundNsPrefix -->
<project name="config" default="dist">
	<property name="src" value="src/" />
	<property name="build" value="classes/" />
	<property name="lib" value="../lib" />

	<target name="init">
		<mkdir dir="${build}" />
	</target>

	<target name="compile" depends="init">
		<javac encoding="GBK" srcdir="${src}" destdir="${build}" includeantruntime="false" debug="true" debuglevel="lines,source">
			<compilerarg line="-Xlint:unchecked" />
		</javac>
	</target>

	<target name="clean">
		<delete dir="${build}" />
	</target>

	<target name="dist" depends="clean, compile">
		<jar jarfile="config.jar" basedir="${build}" manifest="${src}/MANIFEST.MF" />
		<delete dir="${build}"/>
	</target>

	<target name="install" depends="clean, dist">
		<copy file="config.jar" todir="${lib}" />
	</target>
</project>
